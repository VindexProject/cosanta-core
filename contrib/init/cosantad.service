[Unit]
Description=Dash's distributed currency daemon
After=network.target

[Service]
User=dashcore
Group=dashcore

Type=forking
PIDFile=/var/lib/cosantad/cosantad.pid
ExecStart=/usr/bin/cosantad -daemon -pid=/var/lib/cosantad/cosantad.pid \
-conf=/etc/dashcore/cosanta.conf -datadir=/var/lib/cosantad -disablewallet

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
